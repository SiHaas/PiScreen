<!DOCTYPE html>
<html>
  <head>
  <meta http-equiv="Content-Type" content="text/html;charset=utf-8"/>
  <script src="mqttws31.js" type="text/javascript"></script>
  <script type="text/javascript">
    var wsbroker = "msggwt1.service.deutschebahn.com";  
    var wsport = 1860 
    var client = new Paho.MQTT.Client(wsbroker, wsport,
        "hacker_myclientid_" + parseInt(Math.random() * 100, 10));
    client.onConnectionLost = function (responseObject) {
      console.log("connection lost: " + responseObject.errorMessage);
    };
    client.onMessageArrived = function (message) {
	var data = message.payloadString;
	
      console.log(message.destinationName, ' -- ', message.payloadString);
	if (data == "0.0000") {
	document.getElementById("screen").src ="NASA_FIXED.jpg";
	console.log("NASA: " + data);
	} else if(data == "3.0000"){
	document.getElementById("screen").src ="STARS_FIXED.jpg";
	console.log("STARS: " + data);
	} else if(data == "2.0000"){
	document.getElementById("screen").src ="ALIENLIFE_FIXED.jpg";
	console.log("ALIENLIFE: " + data);
	} else if(data == "1.0000"){
	document.getElementById("screen").src ="LIGHT_FIXED.jpg";
	console.log("LIGHT: " + data);
	} else if(data == "6.0000"){
	document.getElementById("screen").src ="DEFAULT_FIXED.jpg";
	console.log("DEFAULT: " + data);
	} else {
   console.log("UNEXPECTED: " + data);	
	}
    };
    var options = {
      timeout: 3,
      onSuccess: function () {
        console.log("mqtt connected");
        // Connection succeeded; subscribe to our topic, you can add multile lines of these
        client.subscribe('HACKER/UNI/LBUDDY', {qos: 1});
    
        //use the below if you want to publish to a topic on connect
        message = new Paho.MQTT.Message("Hello");
        message.destinationName = "HACKER/UNI/LBUDDY";
        client.send(message);
  
      },
      onFailure: function (message) {
        console.log("Connection failed: " + message.errorMessage);
      }
    };
  function init() {
      client.connect(options);
  }
    </script>
    <link rel="stylesheet" type="text/css" href="stylesheet.css">
  </head>
  <body onload="init();">
  
  <div class="image"> <img id="screen" src="DEFAULT_FIXED.jpg" alt="NASADEFAULTED"></div>
    
  </body>

</html>